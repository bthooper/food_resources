<%= render "header" %>
<div class="container mx-auto">
  <h2 class="mx-auto text-center my-8 text-2xl">Log in</h2>
  <div class="mx-auto md:w-1/2 p-4 md:p-8 bg-gray-400">
    <div class="mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-4">
          <%= f.label :email, class: "text-xl leading-loose" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "p-2 rounded w-full" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password, class: "text-xl leading-loose" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "p-2 rounded w-full" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mb-8">
          <%= f.submit "Log in", class: "px-5 py-2 my-2 bg-gray-200 hover:bg-gray-800 hover:text-gray-100 rounded" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>

